<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/dark_grey_contrast" >
    <!--
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/light_blue">

        <ImageView
            android:id="@+id/imageMovieCover"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp" >

            <TextView
                android:id="@+id/textMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film címe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMovieGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Műfaj"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/textMovieDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Időtartam"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/textMovieRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Értékelés"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/buttonDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Részletek"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/light_blue"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
